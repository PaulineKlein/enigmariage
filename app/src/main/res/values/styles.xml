<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
    </style>

    <style name="TitreSplash">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/batikworldwide</item>
        <item name="android:textColor">@color/bleuFonce</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Titre">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/quark_cheese</item>
        <item name="android:textColor">@color/bleuFonce</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="SousTitre">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Body_link">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/bleuFonce</item>
        <item name="android:fontFamily">@font/balsamiq_sans_italic</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Body_big">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text</item>
    </style>

    <style name="Body_parchemin">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/parchemin_text</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Success">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/bleuFonce</item>
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
    </style>

    <style name="Erreur">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/erreur</item>
        <item name="android:fontFamily">@font/balsamiq_sans_bold</item>
    </style>

    <style name="CountDown">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/bleuFonce</item>
        <item name="android:fontFamily">@font/balsamiq_sans_regular</item>
    </style>

    <style name="button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="button_cadena" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_cadena</item>
        <item name="android:textColor">@color/background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="CustomInput">
        <item name="android:textColorHint">@color/dark_grey</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:drawableStart">@drawable/custom_input_icon</item>
        <item name="android:drawablePadding">@dimen/editText_padding</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:padding">@dimen/editText_padding</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Scrollbar">
        <item name="android:scrollbarFadeDuration">0</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:fadeScrollbars">false</item>
    </style>
</resources>
