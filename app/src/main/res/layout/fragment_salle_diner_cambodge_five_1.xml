<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_diner_cambodge_five_message_1"
        style="@style/Body_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diner_cambodge_five_message_1"
        app:layout_constraintBottom_toTopOf="@+id/tv_diner_cambodge_five_message_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread" />

    <TextView
        android:id="@+id/tv_diner_cambodge_five_message_2"
        style="@style/Body_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/diner_cambodge_five_message_2"
        app:layout_constraintBottom_toTopOf="@+id/iv_mangue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_diner_cambodge_five_message_1"
        app:layout_constraintVertical_chainStyle="spread" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mangue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:src="@drawable/image_mangue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_diner_cambodge_five_message_2" />

</androidx.constraintlayout.widget.ConstraintLayout>